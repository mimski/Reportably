@model Reportably.Web.Models.ReportViewModel

@{
    ViewData["Title"] = "Add report";
}

<h1>Add report</h1>
<div class="row">
    <div class="col-md-12">

        <form asp-controller="Report" asp-action="Create" enctype="multipart/form-data" method="post">
            <div class="form-group">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <label asp-for="@Model.Title" class="control-label">Title</label>
                <input asp-for="@Model.Title" class="form-control" />
                <span asp-validation-for="@Model.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Summary" class="control-label">Summary</label>
                <textarea asp-for="@Model.Summary" class="form-control" id="exampleFormControlTextarea1" placeholder="Write the report summary here..." rows="8"></textarea>
                <span asp-validation-for="@Model.Summary" class="text-danger" rows="3"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Author" class="control-label">Author</label>
                <input asp-for="@Model.Author" class="form-control" />
                <span asp-validation-for="@Model.Author" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.PublicationDate" class="control-label">Publication date</label>
                <input asp-for="@Model.PublicationDate" class="form-control" />
                <span asp-validation-for="@Model.PublicationDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="file" class="form-control-file" name="file" />

            </div>

            @*<div class="form-group">
                <div class="custom-file">
                    <input  asp-for="@Model.File" type="file" class="custom-file-input" id="customFile">
                    <label class="custom-file-label" for="customFile">Choose file</label>
                </div>
            </div>*@

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
        </form>

    </div>
</div>
